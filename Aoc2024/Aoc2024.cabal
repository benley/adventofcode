cabal-version:      3.4
name:               Aoc2024
version:            0.1.0.0
-- synopsis:
-- description:
homepage:           https://github.com/benley/adventofcode
license:            MIT
-- license-file:       LICENSE
author:             Benjamin Staffin
maintainer:         benley@gmail.com
